{% extends 'basedb.html.twig' %}

{% block body %}
	<div align="center" class="table-container content-wrapper" style="margin-left: 300px; padding: 20px; margin-top: 50px;">
		<h2 style="color: white;">
			Ajouter un code promo
		</h2>
		<br>
		{{ form_start(form) }}

		{# Champ 'code' #}
		<div>
			{{ form_label(form.code, null, {'label_attr': {'style': 'color: white;'}}) }}
			{{ form_widget(form.code, {'attr': {'style': 'width: 300px;' }}) }}
			{{ form_errors(form.code) }}
		</div>

		{# Champ 'description' #}
		<div>
			{{ form_label(form.description, null, {'label_attr': {'style': 'color: white;'}}) }}
			{{ form_widget(form.description, {'attr': {'style': 'width: 300px;' }}) }}
			{{ form_errors(form.description) }}
		</div>

		{# Champ 'datedexpiration' #}
		<div>
			{{ form_label(form.datedexpiration, null, {'label_attr': {'style': 'color: white;'}}) }}
			{{ form_widget(form.datedexpiration, {'attr': {'style': 'width: 300px;' }}) }}
			{{ form_errors(form.datedexpiration) }}
		</div>

		{# Champ 'used' #}
		<div>
			{{ form_label(form.used, null, {'label_attr': {'style': 'color: white;'}}) }}
			{{ form_widget(form.used, {'attr': {'style': 'width: 300px;' }}) }}
			{{ form_errors(form.used) }}
		</div>

		{# Bouton de soumission #}
		<button type="submit" style="background-color: #da2424; color: white; padding: 10px 20px; font-size: 18px; font-weight: bold; border: none; cursor: pointer; box-shadow: 0 0 5px rgba(0, 0, 0, 0.6);">
			Soumettre
		</button>

		{{ form_end(form) }}
		<a href="{{ path('list_uti') }}" class="btn btn-return" style="background-color: #da2424; color: white; padding: 10px 20px; font-size: 18px; font-weight: bold; border: none; cursor: pointer; box-shadow: 0 0 5px rgba(0, 0, 0, 0.6);">
			Retourner
		</a>
	</div>
{% endblock %}
